{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "target": "es2017",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "allowJs": false,
    "newLine": "LF",
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
